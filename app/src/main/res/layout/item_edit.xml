<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Container horizontal: gambar + info -->
        <LinearLayout
            android:id="@+id/layoutKonten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Gambar kiri -->
            <ImageView
                android:id="@+id/ivGambarPendukung"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"/>

            <!-- Info kanan -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Laporan"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvKategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Kategori"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textColor="#AC0BDC"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi singkat..."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <ImageButton
                    android:id="@+id/btnEditLaporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/fab_circle"
                    android:contentDescription="Edit Laporan"
                    android:padding="8dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_info"
                    app:tint="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol lihat detail di kanan atas -->
        <ImageButton
            android:id="@+id/btnLihatDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/fab_circle"
            android:src="@drawable/ic_detail"
            android:contentDescription="Lihat Detail"
            android:padding="8dp"
            android:scaleType="center"
            app:tint="#FFFFFF" />

        <!-- Tombol edit di bawah tombol lihat detail -->


        <!-- Tombol edit di kanan bawah -->

    </RelativeLayout>

</androidx.cardview.widget.CardView>
